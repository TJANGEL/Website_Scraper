<body class="page-background" id="main-page">
    <div class="jumbotron p-3 p-md-5 rounded">
        <div class="col-lg-12 text-center">
            <h1 class="display-4">Mongo Scraper</h1>
            <h2 class="lead my-3">Tutorialzine Edition</h2>
            <h3 id="saved">New Scraped Articles</h3>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                {{#each article}}
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">{{this.title}}</h2>
                        <a href={{this.link}} target="_blank" class="card-link">
                            <i class="far fa-newspaper"></i> Read Article</a>
                        <br>
                        <br>
                        <p class="card-text">Article Summary: {{this.summary}}</p>

                        <br>
                        <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>