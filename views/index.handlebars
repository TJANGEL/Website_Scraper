<body class="page-background" id="main-page">
    <div class="jumbotron p-5 p-md-5">
        <div class="col-lg-12 text-center">
            <h1 class="display-4">Tutorialzine Scraper</h1>
            <br><br><br><br><br><br><br>
            <h3 id="saved">New Scraped Articles</h3>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                {{#each article}}
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">{{this.title}}</h2>
                        <br>
                        <p class="card-text">Article Summary: {{this.summary}}</p>

                        <br>
                        <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                        <button type="button" class="btn btn-primary read"><a href={{this.link}} target="_blank" class="card-link">Read
                                Article</a></button>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>