<body class="page-background" id="saved-page">
    <div class="jumbotron p-3 p-md-5 rounded">
        <div class="col-lg-12 text-center">
            <h1 class="display-4">Mongo Scraper</h1>
            <h2 class="lead my-3">Tutorialzine Edition</h2>
            <h3 id="saved">Saved Articles</h3>
        </div>
    </div>
    <div class="container">

        {{#each article}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <a href={{this.link}} target="_blank" class="card-link"><i class="far fa-newspaper"></i> Article</a>
                <br><br>
                <p class="card-text">Article Summary: {{this.summary}}</p>

                <br>
                <br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}"
                    data-id={{this._id}}>Comments on Article</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}}

    </div>

    <!--Clicked Notes Modal-->
    {{#each article}} {{> modal }} {{/each}}